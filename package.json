{
    "name": "@fluvio/client",
    "version": "5.0.0",
    "description": "Node.js binding for Fluvio distributed stream",
    "keywords": [
        "fluvio",
        "mq",
        "stream",
        "client"
    ],
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/infinyon/fluvio-client-node.git"
    },
    "homepage": "https://fluvio.io",
    "author": "team@fluvio.io",
    "license": "Apache-2.0",
    "dependencies": {},
    "scripts": {
        "prettier": "npx prettier --write './**/*.{ts,js}'",
        "prettier:check": "npx prettier --check './**/*.{ts,js}'",
        "nj": "nj-cli build -o ./native",
        "tsc": "npx tsc ./src/index.ts --outDir ./dist",
        "build": "npm run nj && npm run tsc",
        "docs": "npx typedoc --out docs ./src/index.ts --theme minimal",
	    "test": "npm run build && npx testyts"
    },
    "devDependencies": {
        "@types/uuid": "^8.3.0",
        "uuid": "^8.3.0",
        "@types/node": "^14.11.1",
        "prettier": "^2.1.2",
        "testyts": "^1.0.3",
        "ts-node": "^9.0.0",
        "typedoc": "^0.19.2",
        "typescript": "^4.0.3"
    }
}
