{
  "exclude": [
    "./examples/**/*",
    "./demos/**/*",
    "./dist/**/*",
    "./build.js",
    "./native/**/*",
    "./docs/**/*",
    "./jest.config.js"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "src",
      "node_modules/@types",
      "types"
    ],
    "types": [
      "node", "jest", "mocha"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
